const resume = {
  name: "P. Sharukavi",
  title: "Frontend Developer",
  contact: {
    email: "pvasuki946@gmail.com",
    phone: "+1 (123) 456-7890",
    location: "Villupuram, CA",
    website: "https://janedoe.dev"
  },
  skills: [
    "JavaScript",
    "HTML5",
    "CSS3",
    "React",
    "Node.js",
    "Git",
    "REST APIs"
  ],
  experience: [
    {
      company: "TechCorp Inc.",
      position: "Frontend Developer",
      duration: "2022 - Present",
      responsibilities: [
        "Developed responsive web apps using React and TypeScript.",
        "Collaborated with UX designers to improve UI/UX.",
        "Implemented unit tests with Jest and React Testing Library."
      ]
    },
    {
      company: "Web Solutions Co.",
      position: "Junior Web Developer",
      duration: "2020 - 2022",
      responsibilities: [
        "Maintained company website and updated content.",
        "Fixed bugs and optimized website performance.",
        "Assisted in frontend redesign using Bootstrap and jQuery."
      ]
    }
  ],
  education: {
    degree: "B.Sc. in Computer Science",
    university: "Annamali University",
    graduationYear: 2020
  },
  displaySummary: function() {
    console.log(`👩‍💻 ${this.name} - ${this.title}`);
    console.log(`📍 ${this.contact.location} | ✉️ ${this.contact.email}`);
    console.log("\n💼 Experience:");
    this.experience.forEach(job => {
      console.log(`- ${job.position} at ${job.company} (${job.duration})`);
    });
    console.log("\n🛠️ Skills:", this.skills.join(", "));
    console.log(`\n🎓 Education: ${this.education.degree} from ${this.education.university} (${this.education.graduationYear})`);
  }
};

// Display the résumé summary in the console
resume.displaySummary();
